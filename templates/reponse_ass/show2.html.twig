<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>My PDF</title>
        <style>
            /* force the delete form to appear on a new page */
            .page-break {
                page-break-after: always;
            }
        </style>
    </head>
    <body>
        {% block body %}
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <h1 style="color: #007bff; margin-bottom: 20px;">Reponse</h1>

                        <table class="table" style="margin-bottom: 20px;">
                            <tbody>
                                <tr>
                                    <th>Id</th>
                                    <td>{{ reponse_ass.idRepAss }}</td>
                                </tr>
                                <tr>
                                    <th>Type Reponse</th>
                                    <td>{{ reponse_ass.typeRepAss }}</td>
                                </tr>
                                <tr>
                                    <th>Question correspondante</th>
                                    <td>{{ reponse_ass.queRepAss }}</td>
                                </tr>
                                <tr>
                                    <th>Description Reponse</th>
                                    <td>{{ reponse_ass.descriptionRepAss }}</td>
                                </tr>
                            </tbody>
                        </table>

                        <div class="page-break"></div>
                        {{ include('reponse_ass/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        {% endblock %}
    </body>
</html>
