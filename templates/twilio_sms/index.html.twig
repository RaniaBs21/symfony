{# templates/twilio_bundle_msg/index.html.twig #}

{% extends 'home_front/basefront.html.twig' %}

{% block body %}
    <div class="container">
        <h1>Send SMS</h1>
        <style>.container {
                margin: 20px auto;
                max-width: 600px;
            }

            .alert {
                padding: 20px;
                margin-bottom: 20px;
                border: 1px solid transparent;
                border-radius: 4px;
            }

            .alert-success {
                color: #155724;
                background-color: #d4edda;
                border-color: #c3e6cb;
            }

            .alert-danger {
                color: #721c24;
                background-color: #f8d7da;
                border-color: #f5c6cb;
            }
        </style>

        {% if message.sid is defined %}
            <div class="alert alert-success" role="alert">
                <p>Message envoyé avec succès !</p>
                <p>SID: {{ message.sid }}</p>
            </div>
        {% else %}
            <div class="alert alert-danger" role="alert">
                <p>Échec de l'envoi du message.</p>
            </div>
        {% endif %}
    </div>
{% endblock %}